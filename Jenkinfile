pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1' // Set your AWS region
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                         branches: [[name: '*/main']],
                         userRemoteConfigs: [[credentialsId: 'Github-pass',
                             url: 'https://github.com/Bhargav1470/Jenkins_assignment.git'
                         ]] // Use the ID of the credentials you added
                     ])
            }
        }
        stage('Terraform Init') {
            steps {
                withAWS(region: AWS_REGION, credentials: 'aws')
                    script {
                        def tfHome = tool 'Terraform'
                        sh "${tfHome}/terraform init -input=false"
                    }
                }
            }
        stage('Terraform Plan') {
            steps {
                withAWS(region: AWS_REGION, credentials: 'aws')
                // Generate Terraform plan
                script {
                    def tfHome = tool 'Terraform'
                    sh "${tfHome}/terraform plan -out=tfplan -input=false"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                withAWS(region: AWS_REGION, credentials: 'aws')
                // Apply Terraform changes
                script {
                    def tfHome = tool 'Terraform'
                    sh "${tfHome}/terraform apply -input=false tfplan"
                }
            }
        }
    }
}
